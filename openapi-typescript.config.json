{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenAPI TypeScript Generator Config",
  "type": "object",
  "properties": {
    "exportNode": {
      "type": "boolean",
      "default": false,
      "description": "Export type instead of type only"
    },
    "input": {
      "type": "string",
      "description": "Path to OpenAPI specification file"
    },
    "output": {
      "type": "string",
      "description": "Path to output TypeScript file"
    },
    "prettierConfig": {
      "type": "string",
      "description": "Path to Prettier configuration file"
    },
    "resolveSchema": {
      "type": "object",
      "properties": {
        "coerceEnum": {
          "type": "boolean",
          "default": true,
          "description": "Coerce all values of enum to string"
        },
        "transform": {
          "type": "object",
          "description": "Transform schema properties"
        }
      }
    },
    "transform": {
      "type": "object",
      "properties": {
        "enumImports": {
          "type": "boolean",
          "default": true,
          "description": "Import enum types separately"
        },
        "keepIgnored": {
          "type": "boolean",
          "default": false,
          "description": "Keep ignored properties in types"
        },
        "schema形容 {
          "type": "string",
          "enum": ["type", "interface", "both"],
          "default": "type",
          "description": "How to generate types"
        },
        "unionUndefined": {
          "type": "boolean",
          "default": true,
          "description": "Add undefined to union types for optional properties"
        }
      }
    }
  }
}
